<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BaseChecklist" android:id="@+id/BaseLayout">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/EditTaskButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="445dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintTop_toBottomOf="@+id/TaskScrollView"
            android:layout_marginBottom="18dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/HistoryButton"
            android:text="@string/EDIT_BUTTON_STRING"/>
    <Button
            android:text="@string/ADD_BUTTON_STRING"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/AddTaskButton"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="18dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="445dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toStartOf="@+id/SettingsButton"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="@string/SETTINGS_BUTTON_STRING"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SettingsButton"
            app:layout_constraintStart_toEndOf="@+id/AddTaskButton"
            android:layout_marginBottom="18dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/HistoryButton"
            android:layout_marginTop="445dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="@string/HISTORY_BUTTON_STRING"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/HistoryButton"
            app:layout_constraintStart_toEndOf="@+id/SettingsButton"
            android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="445dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toStartOf="@+id/EditTaskButton"/>
    <ScrollView
            android:layout_width="368dp"
            android:layout_height="429dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/AddTaskButton"
            android:id="@+id/TaskScrollView"
    >
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/TaskLayout" android:gravity="center_horizontal">
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>